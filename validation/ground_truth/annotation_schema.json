{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ground Truth Annotation Schema",
  "description": "Schema for manual camera shift annotations of real DAF imagery",
  "type": "object",
  "required": ["version", "annotator", "annotation_date", "images"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Schema version (e.g., '1.0')"
    },
    "annotator": {
      "type": "string",
      "minLength": 1,
      "description": "Name of person who performed annotations"
    },
    "annotation_date": {
      "type": "string",
      "format": "date",
      "description": "Date annotations were completed (YYYY-MM-DD)"
    },
    "images": {
      "type": "array",
      "minItems": 1,
      "description": "Array of image annotations",
      "items": {
        "type": "object",
        "required": ["image_path", "site_id", "has_camera_shift", "confidence"],
        "properties": {
          "image_path": {
            "type": "string",
            "pattern": "^sample_images/",
            "description": "Relative path to image from project root"
          },
          "site_id": {
            "type": "string",
            "enum": ["of_jerusalem", "carmit", "gad"],
            "description": "DAF site identifier"
          },
          "has_camera_shift": {
            "type": "boolean",
            "description": "True if camera movement detected, false otherwise"
          },
          "confidence": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Annotator confidence level"
          },
          "notes": {
            "type": "string",
            "description": "Optional annotation notes or observations"
          }
        }
      }
    }
  }
}
